<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/forgot_password"
            layout="@layout/forgot_password_main" />

        <!--FORGOT PASSWORD-->
        <include
            android:id="@+id/bottom_sheet_forgot_password"
            layout="@layout/bottom_sheet_forgot_password" />

        <!--VERIFICATION_CODE-->
        <include
            android:id="@+id/bottom_sheet_verification_code"
            layout="@layout/bottom_sheet_verification_code" />

        <!--CHANGE PASSWORD-->
        <include
            android:id="@+id/bottom_sheet_change_password"
            layout="@layout/bottom_sheet_set_new_password" />

        <include
            android:id="@+id/bottom_sheet_otp_verified"
            layout="@layout/bottom_sheet_password_changed_successfully" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>