<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/layoutToolbar"
                    layout="@layout/toolbar_you_filter" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.230">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="212dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/place_holder" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.015" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.030">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.050" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/quick_story"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.250"
                        android:background="@drawable/shape_white_black_25"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center"
                        android:text="@string/quick_story"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.050" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/flick_story"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.250"
                        android:background="@drawable/shape_neon_black_25"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center"
                        android:text="@string/flick_story"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.050" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pro_story"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.250"
                        android:background="@drawable/shape_neon_black_25"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center"
                        android:text="@string/quick_story"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.050" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.155" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/preview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.040"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:gravity="center"
                    android:text="@string/preview"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/font_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.190" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_55sdp"
                    android:layout_marginEnd="@dimen/_55sdp"
                    android:layout_weight="0.050"
                    android:background="@drawable/shape_neon_black_25"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.040" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_blur"
                android:visibility="gone" />

        </RelativeLayout>

        <include
            android:id="@+id/bottom_sheet_publish_option"
            layout="@layout/bottom_sheet_publish_option" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>