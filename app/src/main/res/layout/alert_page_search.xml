<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_close_black_24dp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/type"
                        android:layout_width="0dp"
                        android:layout_height="?actionBarSize"
                        android:layout_weight="0.800"
                        android:background="@drawable/shape_dark_3_3_3_3"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="@string/type"
                        android:padding="@dimen/_5sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ok"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|end"
                        android:layout_weight="0.200"
                        android:background="@drawable/shape_neon"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/ok"
                        android:textColor="@color/black" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <CheckBox
                    android:id="@+id/search_in_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search in page"
                    android:layout_margin="@dimen/_5sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:checked="true"/>

                <include
                    android:id="@+id/universal_search_button"
                    layout="@layout/button_universal_search"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_hollow_text"
                        android:orientation="horizontal"
                        android:padding="@dimen/_1sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/stories"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:background="@color/white"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:tag="stories"
                            android:text="@string/stories"
                            android:textColor="@color/textColorDefault"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:padding="@dimen/_3sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pages"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:background="@color/neon"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:tag="stories"
                            android:text="@string/pages"
                            android:textColor="@color/textColorDefault"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:padding="@dimen/_3sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/photos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:background="@color/neon"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:tag="stories"
                            android:text="@string/photos"
                            android:textColor="@color/textColorDefault"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:padding="@dimen/_3sdp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/members"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:background="@color/neon"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:tag="users"
                            android:text="@string/member"
                            android:textColor="@color/textColorDefault"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:padding="@dimen/_3sdp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/faq"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:background="@color/neon"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:tag="users"
                            android:text="@string/faqs"
                            android:textColor="@color/textColorDefault"
                            android:textSize="@dimen/_14sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>