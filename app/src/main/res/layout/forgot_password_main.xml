<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/forgot_password_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".ui.login_dashboard.forgot_password.ForgotPasswordActivity">

            <include
                android:id="@+id/layoutToolbar"
                layout="@layout/toolbar_trouble_login" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.050" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.330"
                android:src="@drawable/forgot_password" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.100" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_weight="0.120">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_forgot_password"
                    android:gravity="center"
                    android:stretchColumns="0">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke">

                        <RelativeLayout
                            android:id="@+id/forgot_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_margin="@dimen/_1sdp"
                            android:background="@color/white"
                            android:gravity="center">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_toStartOf="@+id/forgot_password_next"
                                android:fontFamily="@font/source_sans_pro_semi_bold"
                                android:text="@string/forgot_password"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/forgot_password_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                        </RelativeLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:background="@color/white"
                            android:gravity="center">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/get_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_toStartOf="@+id/get_help_next"
                                android:fontFamily="@font/source_sans_pro_semi_bold"
                                android:text="@string/get_help"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/get_help_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                        </RelativeLayout>

                    </TableRow>
                </TableLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.160" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blur"
            android:visibility="gone" />

    </RelativeLayout>
</layout>