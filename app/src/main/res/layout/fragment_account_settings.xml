<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.app.pixstory.data.model.api.AccountDetailResponse.User" />

        <import type="android.view.View"/>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_text_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:focusable="false"
                            android:singleLine="true"
                            android:imeOptions="actionDone" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/first_name_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/first_name_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_text_last_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="@string/last_name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:focusable="false"
                            android:singleLine="true"
                            android:imeOptions="actionDone" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/last_name_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/last_name_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_text_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="@string/username"
                            android:inputType="text"
                            android:focusable="false"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:imeOptions="actionDone"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/username_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/username_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/gender"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:layout_marginStart="@dimen/_5sdp"/>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/gender_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="@string/male"
                                android:clickable="false"/>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="@string/female"
                                android:clickable="false"/>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/others"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="@string/others"
                                android:clickable="false"/>
                        </RadioGroup>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/gender_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/gender_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_text_dob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_weight="0.800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="@string/date_of_birth"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:focusable="false"
                            android:imeOptions="actionDone"
                            android:textColor="@color/default_state"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dob_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/dob_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Country"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_weight="0.800"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_2sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@color/bottom_start" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/spinner_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/spinner_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_text_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_weight="0.800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:focusable="false"
                            android:singleLine="true"
                            android:imeOptions="actionDone"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/email_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/email_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_text_phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="0.800">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                                android:id="@+id/ccp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                app:ccp_defaultNameCode="IN"
                                app:ccp_hideNameCode="true"
                                app:ccp_hidePhoneCode="false"
                                app:ccp_keyboardAutoPopOnSearch="false"
                                app:ccp_showFullName="false" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:hint="@string/mobile_number"
                                android:inputType="number"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:focusable="false"
                                android:imeOptions="actionDone"/>

                        </LinearLayout>
                    </com.google.android.material.textfield.TextInputLayout>



                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/mobile_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_edit_blue_24dp"
                            android:text="@string/edit"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/mobile_ok"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/ic_done_24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/change_password_button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_30sdp"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blur"
            android:visibility="gone" />

        <include
            android:id="@+id/bottom_sheet_change_password"
            layout="@layout/bottom_sheet_change_password" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
