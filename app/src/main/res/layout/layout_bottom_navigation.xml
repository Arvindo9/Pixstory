<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/customBottomBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        app:itemIconTint="@drawable/selectors"
        app:labelVisibilityMode="unlabeled"
        app:layout_behavior=".utils.BottomNavigationBehavior"
        app:itemRippleColor="@color/neon"
        android:background="@android:color/transparent"
        android:animateLayoutChanges="false">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/background_theme"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_weight="0.100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_home_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fab"
            android:layout_width="0dp"
            android:layout_weight="0.100"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:srcCompat="@drawable/upload_icon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/chat"
                android:layout_width="0dp"
                android:layout_weight="0.100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_chat_bubble_black_24dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

