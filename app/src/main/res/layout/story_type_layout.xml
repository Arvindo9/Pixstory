<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_hollow_text"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/_1sdp"
            app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/stories"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textColorDefault"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/stories"
                    android:padding="@dimen/_3sdp"
                    android:layout_width="0dp"
                    android:background="@drawable/shape_white_5_5_0_0"
                    android:layout_height="wrap_content"/>

                <View
                    android:padding="@dimen/_3sdp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/members"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textColorDefault"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:background="@color/neon"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/members"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:padding="@dimen/_3sdp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chat"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textColorDefault"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:background="@color/neon"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:padding="@dimen/_3sdp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/interests"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textColorDefault"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:background="@drawable/shape_neon_0_0_5_5"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/interests"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>