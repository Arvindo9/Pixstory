<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/neon"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/nav_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/nav_header_height"
                    app:cardBackgroundColor="@color/neon"
                    app:cardElevation="@dimen/_20sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:layout_marginTop="@dimen/_30sdp"
                            tools:ignore="RtlSymmetry">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="0.250">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/user" />

                                <ProgressBar
                                    android:id="@+id/progress_bar"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:visibility="gone" />

                            </FrameLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.750"
                                android:fontFamily="@font/source_sans_pro_semi_bold"
                                android:gravity="center|start"
                                android:text="@string/john_doe"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/source_sans_pro_semi_bold"
                            android:gravity="center|start"
                            android:text="@string/profile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nav_account"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/neon"
                    app:cardElevation="@dimen/_20sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center|start"
                        android:text="@string/account"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nav_share_app"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/neon"
                    app:cardElevation="@dimen/_20sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center|start"
                        android:text="@string/share_app"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nav_subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/neon"
                    app:cardElevation="@dimen/_20sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center|start"
                        android:text="@string/subscribe"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nav_faqs"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/neon"
                    app:cardElevation="@dimen/_20sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center|start"
                        android:text="@string/faqs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nav_terms_and_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/neon"
                    app:cardElevation="@dimen/_20sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center|start"
                        android:text="@string/terms_and_conditions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nav_logout"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/neon"
                    app:cardElevation="@dimen/_20sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:gravity="center|start"
                        android:text="@string/logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </com.google.android.material.navigation.NavigationView>
</layout>