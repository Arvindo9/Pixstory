<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.app.pixstory.ui.dashboard.story_detail.model.StoryDetailModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/add_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:gravity="center|start">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:text="@string/title"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:padding="@dimen/_2sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_badge_public_feagure" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_badge_topic_expert" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_badge_star_user" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:maxLines="2"
            android:textSize="@dimen/font_10"
            android:textColor="@color/black"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/dark_blur"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>